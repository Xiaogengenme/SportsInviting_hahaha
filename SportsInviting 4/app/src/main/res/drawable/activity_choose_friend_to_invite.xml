<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#ffffff"
    tools:context="com.example.xiaogengen.yaoyueyundong2.Activity.ChooseFriendToInviteActivity">

    <ImageButton
        android:id="@+id/button1"
        android:src="@drawable/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        />
    <ImageButton
        android:id="@+id/button2"
        android:src="@drawable/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button1"
        android:background="#00000000"
        />
    <ImageButton
        android:id="@+id/button3"
        android:src="@drawable/a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button2"
        android:background="#00000000"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#C2C2C2"
        android:text="xiaogengen"
        android:layout_below="@+id/text1"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#0D0D0D"
        android:text="Justin Bieber"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#C2C2C2"
        android:text="jialongping"
        android:layout_below="@+id/text3"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2" />

    <ImageButton
        android:id="@+id/button4"
        android:src="@drawable/a1"
        android:scaleType="centerInside"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:elevation="0dp"
        android:background="#00000000"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#0D0D0D"
        android:text="smart"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <ImageButton
        android:id="@+id/button5"
        android:src="@drawable/a4"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="0dp"
        android:background="#00000000"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:id="@+id/tbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/tbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约"
        android:layout_alignBottom="@+id/text4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/tbutton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="出发"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:background="#FF82AB"/>
</RelativeLayout>
