<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaogengen.sportsinviting.Activity.Activity.RegisterActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="43dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="341dp"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:hint="your phone number"

        android:ems="10"
        android:inputType="phone"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="111dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="182dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get验证码"
        android:background="#ff6347"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:hint="set your password"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/button4"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:text="注册体验"
        android:textSize="20sp"

        android:layout_marginLeft="8dp"
        android:background="#ff6347"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="61dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="149dp"
        android:layout_height="26dp"
        android:text="注册表示同意"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/button4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="58dp"
        android:layout_height="25dp"
        android:text="用户协议"
        android:textColor="#ff6347"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button4" />


</android.support.constraint.ConstraintLayout>
