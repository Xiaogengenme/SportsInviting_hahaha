<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#ffffff"
    tools:context="com.example.xiaogengen.sportsinviting.Activity.Activity.InvitationActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:background="@drawable/shape"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dip"
            android:entries="@array/books"
            android:background="#E8E8E8"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/text1"
            android:text="点"
            android:textSize="18dp"
            android:textColor="#878787"
            android:layout_toRightOf="@id/spinner"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etext1"
            android:background="#E8E8E8"
            android:layout_toRightOf="@id/text1"
            android:layout_marginLeft="20dip"
            android:layout_width="80dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/text2"
            android:text="分"
            android:textSize="18dp"
            android:textColor="#878787"
            android:layout_toRightOf="@id/etext1"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="25dp"

            android:background="#FFA54F"
            android:text="发送"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />
        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:textColor="#FFA54F"
            android:background="#EDEDED"
            android:text="取消"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/button2"
            android:layout_alignTop="@id/button2"
            android:layout_marginRight="20dip"/>



        <EditText
            android:id="@+id/etext2"
            android:hint="和我一起运动吧！：）"
            android:singleLine="true"
            android:gravity="top|left"
            android:textColorHint="#FFA54F"
            android:textSize="15dp"
            android:background="#E8E8E8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/text1"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="34dp"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2" />
    </RelativeLayout>
</RelativeLayout>
